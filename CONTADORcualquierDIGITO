#include "stdafx.h"
#include "stdio.h"
#include "stdlib.h"
#include "math.h"

void main ()
{int numero,divisor,aux,division,contador;
printf("\t\tCONTADOR DE DIGITOS PARES \n");
 printf("\t\t========================\n\n");
 printf("ingrese un numero:  ");
 scanf("%d",&numero);
 contador=0;
 while(numero>0)
 {
  division=numero/10;
  numero=division;
  contador=contador+1;

     }

 printf("\n\nel numero de digitos es: %d\n\n",contador);
   
system("pause");

}
