/* descripcion: este programa toma cualquier numero, los ordena con el   */
/*              metodo burbuja y nos muestra cual es el menor de todos   */
/*              los numeros.                                             */
/*                                                                       */
/*                                                                       */
/*************************************************************************/


#include "stdafx.h"
#include "stdlib.h"
#include "stdio.h"
#define NMAX 100

void main()
{int j, i,n,aux,vec[NMAX];
system("color 4F");
printf("\t\tMAYOR VALOR POR VECTORES\n");
printf("\t\t========================\n\n");
do{
  printf("\n\ningrese el numero maximo del vector: ");
   scanf("%d",&n);
  }
while((n>100)|| (n<=0));
  for(i=0;i<n;i++)
    {
  	  printf("Vec [%d]=",i+1);
		  scanf("%d",&vec[i]);
      }
     for(i=0;i<n-1;i++)
	 { for(j=i+1;j<n;j++)
	       if(vec[i] > vec[j])
		   {aux=vec[j];
	        vec[j]=vec[i];
			vec[i]=aux;
		   }
	 
	 };
	 printf("\n\n");
 for(i=0;i<n;i++)
 {
printf("vec [%d]=  ",i);
printf("%d\n ",vec[i]);
 }
 printf("el numero menor es: %d\n\n",vec[n-1]);
 system("pause");


}
