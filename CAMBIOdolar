/* DESCRIPCION:Este programa toma tres numeros para obtener sus porcentajes */
/* respectivos con relacion a la suma de ellos mismos                       */
/****************************************************************************/

#include "stdafx.h"
#include "stdio.h"
#include "stdlib.h"

void main()
{float monto, cambio,dolares; 
   printf("\t\tCAMBIO DOLARES A BOLICIANOS  \n");
   printf("\t\t===========================\n\n");
   printf("\n\n ingrese el monto que desea cambiar: ");
   scanf("%f",&monto);
   cambio=6.95;
   if("monto>0")
     {dolares=monto/cambio;
     }
   else
    {printf("\ningree valores validos\n");
    }
   printf("\nel monto %f Bs. en dolares es %f $\n\n",monto,dolares);

   system("pause");
}

