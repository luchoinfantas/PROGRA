/* DESCRIPCION:Este programa toma una ecuacion de segundo grado siendo:     */
/*   ax**2 + bx + c                                                         */
/****************************************************************************/

#include "stdafx.h"
#include "stdio.h"
#include "stdlib.h"
#include "math.h"
void main()
{float a,b,c,ecuacion1,ecuacion12,ecuacion0,ecuacion2; 
   printf("\t\tECUACION CUADRATICA  \n");
   printf("\t\t===================\n\n");
   printf("ingrese a b y c:");
   scanf("%f %f %f",&a, &b, &c);
      if(a>0 && b>0 && c>0)
       {ecuacion0=b*b-4*a*c;
		  if(ecuacion0>0)
		    { ecuacion1= sqrt(ecuacion0);
		      ecuacion12=(-b + ecuacion1)/2*a;
			  ecuacion2=(-b - ecuacion1)/2*a;
		    }
		  else 
		  {printf("es una ecuacion invalida");
		  }
	  }

	  else
	    {printf("ingrese datos validos"); 
	    }

	  printf("\nX1 = %f  \n\n ",ecuacion12);
   printf("X2 = %f  \n\n",ecuacion2);
 system("pause");
}
