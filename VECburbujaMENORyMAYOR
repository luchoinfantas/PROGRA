#include "stdafx.h"
#include "stdlib.h"
#include "stdio.h"
#define NMAX 10

void main()
{int j, i,n,aux,vec[NMAX];
system("color 4F");
do{
   printf("ingrese el numero maximo del vector");
   scanf("%d",&n);
  }
while((n>100)|| (n<=0));
  for(i=0;i<n;i++)
    {
		  printf("Vec [%d]=",i+1);
		  scanf("%d",&vec[i]);
      }
     for(i=0;i<n-1;i++)
	 { for(j=i+1;j<n;j++)
	       if(vec[i] > vec[j])
		   {aux=vec[j];
	        vec[j]=vec[i];
			vec[i]=aux;
		   }
	 
	 };
	 printf("\n\n");
 for(i=0;i<n;i++)
 {
printf("vec [%d]=",i);
printf("%d\n ",vec[i]);
 }
 printf("el numero menor es: %d\n",vec[0]);
 printf("el numero mayor es: %d\n",vec[n-1]);
 system("pause");


}
